<MenuWidget>
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size

    Label:
        font_name: './fonts/AGOXES.ttf'
        font_size: dp(60)
        color: .3, .6, .9, 1
        text: root.parent.title
        pos_hint: {"center_x": .5, "center_y": .6}
    Button:
        font_name: './fonts/AGOXES.ttf'
        font_size: dp(20)
        background_normal: ''
        background_color: .3, .8, .5, .8
        text: root.parent.title_btn
        pos_hint: {"center_x": .5, "center_y": .4}
        size_hint: .2, .1
        on_press: root.parent.start_btn_pressed()
    Button:
        font_name: './fonts/AGOXES.ttf'
        font_size: dp(20)
        background_normal: ''
        background_color: .8, .5, .3, .8
        text: root.parent.title_difficulty
        pos_hint: {"right": .9, "center_y": .4}
        size_hint: .2, .1
        on_press: root.parent.difficulty_btn_pressed()